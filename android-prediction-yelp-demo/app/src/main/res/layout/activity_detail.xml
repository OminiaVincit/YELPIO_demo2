                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/review3_short"
                android:text="ReviewReviewReviewReviewReviewReviewReviewReviewReviewReview ... "
                android:textSize="15sp"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/review3_long"
                android:text="ReviewReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewReviewReviewReviewReviewReviewReviewReviewReview ... "
                android:textSize="15sp"
                android:visibility="gone"
                android:paddingBottom="15dp"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="#ccc"/>

            <RatingBar
                android:id="@+id/review_rating4"
                android:layout_width="wrap_content"
