                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/review5_short"
                android:text="ReviewReviewReviewReviewReviewReviewReviewReviewReviewReview ... "
                android:textSize="15sp"

                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/review5_long"
                android:text="ReviewReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewRReviewReviewReviewReviewReviewReviewReviewReviewReview ... "
                android:textSize="15sp"
                android:visibility="gone"

                android:paddingBottom="15dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>